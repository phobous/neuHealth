<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neuhealth.demo.mapper.OutRequestVOMapper">

    <resultMap id="outRequestWithClientMap" type="com.neuhealth.demo.domain.OutRequestVO">
        <id property="id" column="id" />
        <result property="clientId" column="client_id" />
        <result property="reason" column="reason" />
        <result property="outTime" column="out_time" />
        <result property="expectedReturnTime" column="expected_return_time" />
        <result property="actualReturnTime" column="actual_return_time" />
        <result property="status" column="status" />
        <result property="reviewerId" column="reviewer_id" />
        <result property="reviewTime" column="review_time" />
        <result property="clientName" column="clientName" />
        <result property="detail" column="detail" />
    </resultMap>

    <!-- 查询总数 -->
    <select id="countOutRequestVO" resultType="int">
        SELECT COUNT(1)
        FROM out_requests r
        LEFT JOIN clients c ON r.client_id = c.id
        WHERE r.status = #{status}
        <if test="name != null and name != ''">
            AND c.name LIKE CONCAT('%', #{name}, '%')
        </if>
    </select>

    <!-- 查询分页数据 -->
    <select id="selectOutRequestVOList" resultType="com.neuhealth.demo.domain.OutRequestVO">
        SELECT
        r.id,
        r.client_id AS clientId,
        c.name AS clientName,
        r.reason,
        r.out_time AS outTime,
        r.expected_return_time AS expectedReturnTime,
        r.actual_return_time AS actualReturnTime,
        r.status,
        r.reviewer_id AS reviewerId,
        r.review_time AS reviewTime,
        r.detail
        FROM out_requests r
        LEFT JOIN clients c ON r.client_id = c.id
        WHERE r.status = #{status}
        <if test="name != null and name != ''">
            AND c.name LIKE CONCAT('%', #{name}, '%')
        </if>
        ORDER BY r.id
        LIMIT #{offset}, #{pageSize}
    </select>


</mapper>