<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neuhealth.demo.mapper.CheckOutRequestVOMapper">

    <resultMap id="checkOutRequestWithClientMap" type="com.neuhealth.demo.domain.CheckOutRequestVO">
        <id property="id" column="id" />
        <result property="clientId" column="client_id" />
        <result property="type" column="type" />
        <result property="reason" column="reason" />
        <result property="requestedAt" column="requested_at" />
        <result property="status" column="status" />
        <result property="reviewerId" column="reviewer_id" />
        <result property="reviewTime" column="review_time" />
        <result property="clientName" column="clientName" />
        <result property="detail" column="detail" />
    </resultMap>

    <!-- 查询总数 -->
    <select id="countCheckOutRequestVO" resultType="int">
        SELECT COUNT(1)
        FROM check_out_requests r
        LEFT JOIN clients c ON r.client_id = c.id
        WHERE r.status = #{status}
        <if test="name != null and name != ''">
            AND c.name LIKE CONCAT('%', #{name}, '%')
        </if>
    </select>

    <!-- 查询分页数据 -->
    <select id="selectCheckOutRequestVOList" resultType="com.neuhealth.demo.domain.CheckOutRequestVO">
        SELECT
        r.id,
        r.client_id AS clientId,
        c.name AS clientName,
        r.type,
        r.reason,
        r.requested_at AS requestedAt,
        r.status,
        r.reviewer_id AS reviewerId,
        r.review_time AS reviewTime,
        r.detail
        FROM check_out_requests r
        LEFT JOIN clients c ON r.client_id = c.id
        WHERE r.status = #{status}
        <if test="name != null and name != ''">
            AND c.name LIKE CONCAT('%', #{name}, '%')
        </if>
        ORDER BY r.id
        LIMIT #{offset}, #{pageSize}
    </select>

</mapper>